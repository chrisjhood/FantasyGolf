<h1>Listing tournaments</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Api ID</th>
    <th>Purse</th>
    <th>Winning Share</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @tournaments.each do |tournament| %>
  <tr>
    <td><%= tournament.name %></td>
    <td><%= tournament.api_id %></td>
    <td><%= number_to_currency(tournament.purse) %></td>
    <td><%= number_to_currency(tournament.winning_share) %></td>
    <td><%= link_to 'Show', tournament %></td>
    <td><%= link_to 'Edit', edit_tournament_path(tournament) %></td>
    <td><%= link_to 'Destroy', tournament, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Tournament', new_tournament_path %><br/>



